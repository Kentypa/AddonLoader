{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "addonloader",
  "version": "0.1.1",
  "identifier": "com.kentcompany.addonloader",
  "build": {
    "frontendDist": "../build",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "yarn run dev",
    "beforeBuildCommand": "yarn run build"
  },
  "app": {
    "windows": [
      {
        "title": "addonloader",
        "width": 800,
        "height": 600,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": "default-src 'self' ipc: http://ipc.localhost; img-src 'self' asset: http://asset.localhost data:; connect-src ipc: http://ipc.localhost; default-src 'self'; connect-src 'self' https://api.steampowered.com ipc:;",
      "devCsp": "default-src 'self' ipc: http://ipc.localhost; img-src 'self' asset: http://asset.localhost data:; connect-src ipc: http://ipc.localhost; default-src 'self'; connect-src 'self' https://api.steampowered.com ipc:;",
      "assetProtocol": {
        "enable": true,
        "scope": {
          "allow": [
            "**/*",
            "/home/*/.steam/steam/steamapps/common/Left 4 Dead 2/**",
            "/home/*/.local/share/Steam/steamapps/common/Left 4 Dead 2/**",
            "/home/**"
          ],
          "deny": []
        }
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "publisher": "KentInCorporation",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "linux": {
      "deb": {
        "depends": ["libc6", "libgcc-s1"]
      }
    }
  }
}
