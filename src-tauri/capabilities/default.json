{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "enables the default permissions",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "dialog:default",
    "fs:default",
    "fs:read-all",
    "fs:write-all",
    "fs:allow-rename",
    "fs:allow-mkdir",
    "fs:allow-exists",
    "fs:allow-watch",
    "fs:read-dirs",
    {
      "identifier": "fs:scope",
      "allow": ["/home/*/.steam/**", "/home/*/.local/share/Steam/**", "**/*"]
    },
    {
      "identifier": "shell:allow-execute",
      "allow": [
        {
          "name": "cmd",
          "cmd": "cmd"
        },
        {
          "name": "powershell",
          "cmd": "powershell"
        },
        {
          "name": "tasklist",
          "cmd": "tasklist"
        },
        {
          "name": "any",
          "cmd": "**"
        }
      ]
    },
    {
      "identifier": "http:default",
      "allow": [
        {
          "url": "https://api.steampowered.com/ISteamRemoteStorage/GetPublishedFileDetails/v1/*"
        }
      ]
    },
    {
      "identifier": "shell:allow-execute",
      "allow": [
        {
          "name": "cmd",
          "cmd": "cmd"
        }
      ]
    },
    {
      "identifier": "shell:allow-execute",
      "allow": [
        {
          "name": "powershell",
          "cmd": "powershell"
        }
      ]
    },
    {
      "identifier": "shell:allow-execute",
      "allow": [
        {
          "name": "tasklist",
          "cmd": "tasklist"
        }
      ]
    },
    "shell:default",
    "http:default"
  ]
}
